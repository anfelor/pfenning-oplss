.sf {
  .sans-serif
}

iddash         : -
@tex iddash    : []{tex-cmd:"\dash"}

.codesub {
  font-style:normal;
  tex-cmd:"\mbox";
}

total     : &lang;&rang;
@tex total: &lang; &rang;

.code1,.pre-indented,.pre-fenced3 {
  language: kokax;
}

.code1 {
  replace:"/^:/\(:|\)/";
  replace:"/^([A-Z])$/\(\/\/\1|\1\)/";
}

.emit {
  background-color: #ddd;
}

.koka {
  language: kokax;
  xreplace:"/([a-qszA-QS-Z])([12])\b/\1\(x|~\2~\)/g";
  replace: "//=>/\(=>|[&rArr;]{.serif}\)\
            //->/->\
            //--/-\([{}]{.texraw}\)-\
            //~>/\(xx|$\rightsquigarrow$\)\
            //<>/\(<>|&total;\)\
            //\blt\b/<\
            //\bgt\b/>\
            //>>=/>>=\
            //_s\b/\(x|~[s]{.codesub}~\)\
            //\btau\b/\(t|[&tau;]{.serif}\)\
            //(\w)@(ru?\d?)\b/\1\([@\2]{.emit}\)\
            //@([-\w]+(?:\([^\)]*\))?)/\([\1]{.emit}\)\
            //@\{([^\}]+)\}/\([\1]{.emit}\)\
            //gm";
}


@if tex {
  pre { tex-cmd-outer:"{\def~{\nobreakspace{}}"; }
  .pre-fenced4 { font-size:small }
  xpre,.xcode2 { font-size:small }
  .xpre-indented,.xpre-fenced {
    margin-top:0.25ex;
    margin-bottom:0.25ex;
  }
}

.math-inline {
  input: mathpre;
}

mathpre {
  .mathpre;
}

