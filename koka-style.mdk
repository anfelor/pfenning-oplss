infer {
  .align-center;
  display:block;
  replace:"/\/\/ *(.*)/&\\;\\text{(\1)}/g";
  replace:"/([\s\S]*?)\n *----+ *(?:\[([^\]]*)\])? *\n([\s\S]*)/\\infer{\1}{\3}{\textsc{\2}}/m";
  replace:"$&nl;&source;&nl;${.infereq; display:inline-block;}";
}

dinfer {
  .align-center;
  display:block;
  replace:"/\/\/ *(.*)/&\\;\\text{(\1)}/g";
  replace:"/([\s\S]*?)\n *----+ *(?:\[([^\]]*)\])? *\n([\s\S]*)/\\dinfer{\1}{\3}{\textsc{\2}}/m";
  replace:"$&nl;&source;&nl;${.infereq; display:inline-block;}";
}

